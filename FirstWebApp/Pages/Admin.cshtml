@page
@model FirstWebApp.Pages.AdminModel
@using TaskItem = FirstWebApp.Models.TaskItem
@{
}
@section Scripts {
    <script src="~/js/admin.js"></script>
}
<h1 class="mt-4 text-danger text-center">Admin Dashboard</h1>
<p class="text-center text-warning">Restricted Access: Managing all user tasks.</p>

@if (Model.AllTasks == null || Model.AllTasks.Count == 0)
{
    <div class="alert alert-dark text-center m-5 p-5 fw-bold fs-5 text-uppercase" role="alert">
        No tasks found.
    </div>
}
else
{
    <div class="table-responsive pe-5 ps-5">
        <table class="table table-striped table-hover border m-auto">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Task Title</th>
                    <th>Owner (Email)</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.AllTasks)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Title</td>
                        <td>@(task.User != null ? task.User.Email : "Unknown")</td>
                        <td>
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>
                            <form method="post">
                                <input type="hidden" name="Id" id="Id" value="@task.Id" />
                                <button class="btn btn-sm btn-outline-danger admin-action-btn" asp-page-handler="Delete">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}