@page
@model FirstWebApp.Pages.SignUpModel
@{
}
<div class="container">
    <div class="row justify-content-center gap-4">
        <div class="col-12 col-md-8 col-lg-9">
            <form class=" m-auto mt-5 border rounded-2 border-body p-3 register-form" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="Name" asp-for="Name" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="Email" asp-for="Email" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="Password" asp-for="Password">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword">
                </div>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <button type="submit" class="btn btn-primary mb-3">Register</button>
                <p>Already have an account? <a href="~/Login">Login</a></p>
            </form>
        </div>
    </div>
</div>