@using Microsoft.AspNetCore.Identity
@using FirstWebApp.Models
@inject UserManager<User> UserManager

@{
    User? currentUser = null;
    if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        currentUser = await UserManager.GetUserAsync(User);
    }
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - FirstWebApp</title> *@
    <title>Todo App</title>
    <script type="importmap"></script>
    <script src="~/js/tasks.js" defer></script>
    <script src="~/js/index.js" defer></script>
    <link rel="icon" type="image/x-icon" href="~/tabicon.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FirstWebApp.styles.css" asp-append-version="true" />
    <script>
        const getPreferredTheme = () => {
            const storedTheme = localStorage.getItem('theme')
            if (storedTheme) {
                return storedTheme
            }
            return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
        }
        document.documentElement.setAttribute('data-bs-theme', getPreferredTheme())
    </script>
</head>
<body class="pb-2">
    <header class="navbar navbar-expand-lg bg-body-tertiary pe-5 ps-5 shadow-sm">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <img src="/tabicon.png" class="me-1" style="width: 1.5rem; height: 1.5rem;" />
                <a href="~/" class="navbar-brand text-reset link-offset-2 link-underline link-underline-opacity-0 fw-bold">ToDo App</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto fs-5 gap-4 align-items-end d-flex align-items-center pt-3">
                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a href="~/" class="text-reset link-offset-2 link-underline link-underline-opacity-0 ">Add task</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/tasks" class="text-reset link-offset-2 link-underline link-underline-opacity-0 ">All Tasks</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a href="~/Admin" class="text-reset link-offset-2 link-underline link-underline-opacity-0  text-danger">Manage tasks</a>
                            </li>
                        }
                        <li class="nav-item dropdown position-relative">
                            <a class="nav-link d-flex align-items-center justify-content-center"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">

                                @if (!string.IsNullOrEmpty(currentUser.ProfilePictureUrl))
                                {
                                    <img src="@currentUser.ProfilePictureUrl"
                                         style="width: 45px; height: 45px; object-fit: cover;"
                                         class="rounded-circle border bg-info"
                                         alt="Profile" />
                                }
                                else
                                {
                                    <img src="https://i.pinimg.com/474x/24/99/03/249903173ee16b3346ba320a24e56a8b.jpg"
                                         style="width: 45px; height: 45px; object-fit: cover;"
                                         class="rounded-circle border bg-info"
                                         alt="Profile" />
                                }
                            </a>

                            <ul class="dropdown-menu position-absolute text-center text-lg-start end-0 start-50 translate-middle-x">
                                <li><h2 class="dropdown-header">@currentUser?.UserName</h2></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="~/Profile">My Profile</a></li>
                                <li><a class="dropdown-item text-danger" href="~/Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="~/login" class="text-reset link-offset-2 link-underline link-underline-opacity-0 ">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="~/signUp" class="text-reset link-offset-2 link-underline link-underline-opacity-0 ">Sign Up</a>
                        </li>
                    }
                    <li class="nav-item d-flex align-items-center">
                        <button class="btn nav-link" id="theme-toggle" title="Switch Theme">
                            <i id="theme-icon" class="bi bi-moon-stars-fill" style="cursor: pointer;"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
