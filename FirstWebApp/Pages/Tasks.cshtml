@page
@model FirstWebApp.Pages.TasksModel
@using TaskItem = FirstWebApp.Models.TaskItem
@{
    ViewData["Title"] = "Tasks Page";
}

<h1 class="m-5 mb-3 text-center text-decoration-underline">Tasks</h1>
<div class="d-flex justify-content-center align-items-center gap-2 mb-2">
    <form method="get" class="m-0">
        <div class="text-center">
            <label class="form-label fw-bold">Filter by Category</label>
            <select name="SelectedCategoryId"
                    id="CategoryFilter"
                    class="form-select"
                    onchange="this.form.submit()"
                    asp-items="@(new SelectList(Model.MyCategories, "Id", "Name", Model.SelectedCategoryId))">
                <option value="">All Tasks</option>
            </select>
        </div>
    </form>
</div>
@if (Model.SelectedCategoryId != null && Model.SelectedCategoryId != 0)
{
    <div class="m-auto mb-3 text-center">
        <button type="button" class="btn btn-outline-danger"
                data-bs-toggle="modal" data-bs-target="#deleteCategoryModal">
            Delete Category
        </button>
    </div>
}

<div class="modal fade" id="deleteCategoryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5 text-danger">Delete Category?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this category?</p>
                <p class="fw-bold text-danger">Warning: All tasks in this category will also be deleted!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                <form method="post">
                    <input type="hidden" name="CategoryIdToDelete" id="CategoryIdToDelete" value="@Model.SelectedCategoryId" />
                    <button type="submit" class="btn btn-danger" asp-page-handler="DeleteCategory">Confirm Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
<ul class="list-unstyled">
    @if (Model.MyTasks.Count == 0)
    {
        <h3 class="text-center mt-5 text-body-secondary">No tasks.</h3>
    }
    else
    {
        @foreach (TaskItem task in @Model.MyTasks)
        {
            <li class="col-12 col-md-6 mx-auto mb-3 p-2 border rounded-2 border-body task-item">
                <form method="post" class="align-content-center d-flex flex-column form">
                    <input type="hidden" name="Id" id="Id" value="@task.Id" />
                    <div>
                        <input type="text" class="form-control w-100 Title" name="Title" id="Title" value="@task.Title" />
                    </div>
                    <span class="text-center mt-3">
                        Category: @(task.Category == null ? "No Category" : task.Category.Name)
                    </span>
                    <span class="text-center mb-3 IsCompleted">
                        @(task.IsCompleted ? "Completed" : "Not completed")
                    </span>
                    <div class="d-flex justify-content-center flex-wrap gap-2">
                        <button type="submit" class="btn btn-success form-button" asp-page-handler="Complete">Complete task</button>
                        <button type="submit" class="btn btn-primary form-button" asp-page-handler="Update">Update task</button>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target=".deleteModal-@task.Id">Delete task</button>
                        <div class="modal fade modal-sm deleteModal-@task.Id" id="deleteModal-@task.Id" tabindex="-1" aria-labelledby="exampleModalLabel">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Are you sure?</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-outline-danger form-button" data-bs-dismiss="modal" asp-page-handler="Delete">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </li>
        }
    }
</ul>
